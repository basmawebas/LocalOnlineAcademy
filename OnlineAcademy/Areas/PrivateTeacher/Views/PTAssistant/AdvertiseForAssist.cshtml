@model OnlineAcademy.Areas.PrivateTeacher.Data.PTAssistant

@{
    ViewBag.Title = "AdvertiseForAssist";
    Layout = null;
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @*<script src="~/Areas/Admin/Content/plugins/jquery/jquery.min.js"></script>*@
}
<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<link href="~/Areas/Admin/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
<!-- Theme style -->
<link href="~/Areas/Admin/Content/dist/css/adminlte.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<body class="container-fluid" style="background-color:#f4f6f9;direction:rtl">
    @using (Html.BeginForm("AdvertiseForAssist", "PTAssistant", new { @*enctype = "multipart/form-data"*@ area = "PrivateTeacher" }, FormMethod.Post))
    {
        <div class="container pt-5">
            @*<div style="width:50%;margin:auto;margin-bottom:30px;text-align:center">
                    <h3>
                        إعلان طلب مساعد
                    </h3>
                </div>*@
            <div class="row" style="width:50%;margin:auto;">

                <div class="col-md-10">
                    
                    @*-------------------------------Horizontal form---------------------------------------------------------------*@

                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <div class=" text-center float-right">إعلان طلب مساعد</div>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="form-horizontal">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="teachername" class="col-md-3 col-form-label"><span style="font-size:small"> إسم المدرس :</span></label>
                                    <div class="col-md-9">
                                        @Html.TextBox("UserName","Basma", new { @class="form-control" })
                                        @*@Html.TextBoxFor(m =>m.PTUser.UserName,  new { @class = "form-control", @type = "text",@value = Model.PTUser.UserName })*@
             

                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label for="txtareadetails" class="col-md-3 col-form-label"><span style="font-size:small">شروط التقدم للوظيفة :</span></label>
                                    <div class="col-md-9">
                                        <!-- textarea -->
                                        @Html.TextAreaFor(m => m.AdDetails, new { @class = "form-control", placeholder = " ... أدخل الشروط", rows = "3" })



                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Duration" class="col-md-3 col-form-label"><span style="font-size:small">الدوام :</span></label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", placeholder = "أدخل  عدد ساعات العمل" })


                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Salary" class="col-md-3 col-form-label"> <span style="font-size:small">المرتب :</span></label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.salary, new { @class = "form-control", placeholder = "أدخل المرتب" })


                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label for="exampleInputFile">إختيار صورة</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            @Html.TextBoxFor(m => m.File, new {id= "exampleInputFile", @class="custom-file-input", type = "file" })
                                            
                                            <label class="custom-file-label" for="exampleInputFile"> </label>
                                        </div>
                                        <div class="input-group-append">
                                            <span class="input-group-text">رفع</span>
                                        </div>
                                    </div>
                                </div>*@
                                <div class="form-group row">
                                    <label for="DateTime" class="col-md-3 col-form-label"> <span style="font-size:small">  تاريخ إنشاء الإعلان :</span> </label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(m => m.DateTime, new { htmlAttributes = new { @type = "date", autocomplete = "off", @class = "form-control" } })
                                    </div>
                                </div>


                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">نشر الإعلان</button>
                                <button type="submit" class="btn btn-default float-right">إلغاء</button>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                    </div>
                    <!-- /.card -->


                </div>
                @*<div class="col-md-2" style="border-right:1px #9cb3d4 solid">
                    <img src="~/Areas/Admin/Content/dist/img/user2-160x160.jpg" alt="User Avatar" class="img-size-50 mr-3 img-circle" />

                </div>*@
            </div>
        </div>
    }

    @*<script>
        $(function () {
            $("#DateTime").datepicker({ dateFormat: "dd / mm / yy" });
        });
    </script>*@

    <!-- Bootstrap 4 -->
    <script src="~/Areas/Admin/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/Areas/Admin/Content/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Content/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/Content/dist/js/demo.js"></script>

    <!-- Page specific script -->
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
</body>