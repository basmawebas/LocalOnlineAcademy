@model OnlineAcademy.Areas.PrivateTeacher.Data.PTAssistant
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdvertiseDetails</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/Areas/Admin/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/Content/dist/css/adminlte.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin:auto;padding-top:50px;direction:rtl">

        <div class="card bg-light" style="width:50%;margin:auto;direction:rtl">
            <div class="card-header text-muted border-bottom-0" style="padding-left:40%;margin-bottom:25px">
                <h3 class="lead"> <b>تفاصيل الإعلان</b> </h3>
            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-7">

                        <h4 class="lead small"><b>إسم المدرس : </b>محمد أحمد </h4>
                        @*<p class="text-muted text-sm"><b>شروط المتقدم للوظيفة :  @Html.DisplayFor(Model.AdDetails) </b> </p>*@
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small pb-2">

                                <b>شروط التقدم للوظيفة :</b>
                                @Html.DisplayFor(model => model.AdDetails)

                            </li>
                            <li class="small pb-2">@*<span class="fa-li"><i class="fas fa-lg fa-building"></i></span>*@<b>الدوام :</b> @Html.DisplayFor(model => model.Duration)</li>
                            <li class="small pb-2">@*<span class="fa-li"><i class="fas fa-lg fa-building"></i></span>*@<b>تاريخ الإعلان :</b> @Html.DisplayFor(model => model.DateTime.Day)</li>
                            <li class="small pb-2">@*<span class="fa-li"><i class="fas fa-lg fa-building"></i></span>*@<b>المرتب :</b> @Html.DisplayFor(model => model.salary)</li>
                            <li class="small pb-2"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: + 800 - 12 12 23 52</li>
                        </ul>
                    </div>
                    <div class="col-5 text-center">
                        <img src="~/Areas/Admin/Content/dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <a href="#" class="btn btn-sm bg-teal">
                        <i class="fas fa-comments"></i>
                    </a>
                    @Html.ActionLink("تقدم للوظيفة", "ApplyForAssisJob", "PTAssistant", new { AdvertiseId = Model.Id, area = "PrivateTeacher" }, null)

                    <i class="fas fa-user"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="~/Areas/Admin/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/Areas/Admin/Content/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Content/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/Content/dist/js/demo.js"></script>
</body>
</html>
